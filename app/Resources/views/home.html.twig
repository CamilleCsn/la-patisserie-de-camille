					     		<a href="{{ path('camille_blog_view', {'id': recipe.id}) }}">
										<img 
											style="width: 100%"
											class="" 
											src="{{ asset(recipe.thumbnail.webPath) }}" 
											alt="{{ recipe.thumbnail.alt }}"
